#include <helpers.h>

void initSystem(void) {
	SysTick_Config (SystemCoreClock / 1000u);
}

void Delay(uint32_t msec) {
	uint32_t currentTicks = msTicks;
	while ((msTicks - currentTicks) < msec);
}

void SysTick_Handler (void)
{
	msTicks++;
}
